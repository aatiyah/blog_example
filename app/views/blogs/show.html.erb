<p>
  <strong>Name:</strong>
  <%= @blog.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user.name %>
</p>

<% @blog_posts.each do |blog_post| %>
	<p>
	  <strong>Blog:</strong>
	  <%= blog_post.title %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= blog_post.content %>
	</p>
<% end %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
